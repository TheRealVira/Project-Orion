# pnpm configuration for Project Orion

# Registry settings
registry=https://registry.npmjs.org/

# Network timeouts (in milliseconds)
fetch-timeout=60000
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000
fetch-retries=5

# Performance settings
store-dir=.pnpm-store
lockfile-only=false

# Security settings
auto-install-peers=true

# CLI settings
prefer-frozen-lockfile=true

# Build scripts
# Ignore build scripts for packages that can't be compiled in Docker Alpine
# (better-sqlite3 requires system build tools not available in minimal images)
# The pre-built bindings from the lock file will be used instead
ignore-scripts=false
strict-peer-dependencies=false

# Audit settings
audit=true

# Progress reporting
reporter=default
progress=true

# Other optimizations
shamefully-hoist=false
node-linker=isolated
