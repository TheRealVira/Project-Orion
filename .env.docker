# ========================================
# PROJECT ORION - DOCKER ENVIRONMENT
# ========================================
# This is a template for Docker deployments.
# Copy relevant variables to docker-compose.yml environment section.

# ========================================
# Application Settings
# ========================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_AUTH_URL=http://localhost:3000

# ========================================
# Database Configuration
# ========================================
DATABASE_PATH=/app/data/orion.db

# ========================================
# Default Admin Account
# ========================================
# ⚠️ CHANGE THESE IN PRODUCTION!
DEFAULT_ADMIN_EMAIL=admin@orion.local
DEFAULT_ADMIN_NAME=Administrator
DEFAULT_ADMIN_PASSWORD=admin123

# ========================================
# Feature Flags
# ========================================
ENABLE_WEBHOOKS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_OAUTH=true
ENABLE_LDAP=false

# ========================================
# Email Configuration (Optional)
# ========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# FROM_EMAIL=orion@example.com
# FROM_NAME=Project Orion

# ========================================
# SMS Configuration (Optional)
# ========================================
# ENABLE_SMS_NOTIFICATIONS=true
# TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_FROM_NUMBER=+1234567890
# SMS_PROVIDER=twilio

# ========================================
# OAuth - Google (Optional)
# ========================================
# OAUTH_GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
# OAUTH_GOOGLE_CLIENT_SECRET=your_client_secret

# ========================================
# OAuth - GitHub (Optional)
# ========================================
# OAUTH_GITHUB_CLIENT_ID=your_github_client_id
# OAUTH_GITHUB_CLIENT_SECRET=your_github_client_secret

# ========================================
# OAuth - Microsoft (Optional)
# ========================================
# OAUTH_MICROSOFT_CLIENT_ID=your_microsoft_client_id
# OAUTH_MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
# OAUTH_MICROSOFT_TENANT=common

# ========================================
# OAuth - GitLab (Optional)
# ========================================
# OAUTH_GITLAB_CLIENT_ID=your_gitlab_client_id
# OAUTH_GITLAB_CLIENT_SECRET=your_gitlab_client_secret
# OAUTH_GITLAB_URL=https://gitlab.com

# ========================================
# LDAP Configuration (Optional)
# ========================================
# ENABLE_LDAP=true
# LDAP_URL=ldap://ldap.company.com:389
# LDAP_BIND_DN=cn=admin,dc=company,dc=com
# LDAP_BIND_PASSWORD=your_bind_password
# LDAP_SEARCH_BASE=ou=users,dc=company,dc=com
# LDAP_SEARCH_FILTER=(uid={{username}})
# LDAP_USERNAME_ATTR=uid
# LDAP_EMAIL_ATTR=mail
# LDAP_NAME_ATTR=cn

# ========================================
# Webhook Configuration (Optional)
# ========================================
# WEBHOOK_SECRET=your_webhook_secret_here

# ========================================
# Logging
# ========================================
LOG_LEVEL=info
